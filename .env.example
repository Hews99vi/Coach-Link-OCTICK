# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
DATABASE_PATH=./database.sqlite

# JWT Configuration
# Generate a secure random string for production
# Example: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d

# Coordinator Access
# Hash your password using bcryptjs before storing
# Example: node -e "const bcrypt = require('bcryptjs'); bcrypt.hash('yourpassword', 10).then(console.log)"
COORDINATOR_PASSWORD=$2a$10$EXAMPLE_HASHED_PASSWORD_REPLACE_THIS

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Email Configuration (Optional - for future use)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your_email@example.com
# SMTP_PASSWORD=your_email_password

# Other Configuration
# LOG_LEVEL=info
# MAX_FILE_SIZE=5242880
